@model IEnumerable<StudentDetailsProject.Models.studentModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["SuccessMessage"];
    </div>
}


else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["ErrorMessage"];
    </div>
}



else if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["InfoMessage"];
    </div>
}

<p>
    @Html.ActionLink("Add Student", "Create")
</p>
<script>
    function OnFilterButtonClick() {
        document.getElementById('date').className = "show";
    }
    function OnhideDivClick() {
        document.getElementById('filter').className = "hide";
    }

</script>




@using (Html.BeginForm("Index", "Student", FormMethod.Post))
{
    
        <input type="text" value="" placeholder="1111-1-1" name="startDate" />
        <input type="text" value="" placeholder="1111-1-1" name="EndDate" />
        <input type="submit" value="show"  />


    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfbirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfJoining)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
